<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="AdDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FullscreenAdDialog" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/bg_ad_dialog</item>
        <item name="android:windowAnimationStyle">@style/AdDialogAnimation</item>
    </style>

    <style name="WallAdDialog" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/bg_ad_dialog</item>
        <item name="android:windowAnimationStyle">@style/AdDialogAnimation</item>
    </style>

</resources>
